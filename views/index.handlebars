<section class="container">
    <form action="/website" method="POST" class="my-5">
        <div class="col-12 col-lg-6 mx-auto mb-4 form-floating">
            <input type="text" class="form-control" id="floatingInput" name="website" placeholder="https://cookies.ptagroup.sk">
            <label for="floatingInput">Website</label>
        </div>
        <button class="col-4 col-lg-2 mx-auto d-block btn btn-success">Scan</button>
    </form>
    <div id="loader" class="d-none flex-column align-items-center justify-content-center">
        <p>Scan can take up to 1 minute...</p>
        <div class="spinner-grow" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</section>

<script>
    const form = document.querySelector('form');
    const input = document.querySelector('input')
    const loader = document.querySelector("#loader")

    function validateUrl(value) {
        return /^(?:(?:(?:https?|ftp):)?\/\/)(?:\S+(?::\S*)?@)?(?:(?!(?:10|127)(?:\.\d{1,3}){3})(?!(?:169\.254|192\.168)(?:\.\d{1,3}){2})(?!172\.(?:1[6-9]|2\d|3[0-1])(?:\.\d{1,3}){2})(?:[1-9]\d?|1\d\d|2[01]\d|22[0-3])(?:\.(?:1?\d{1,2}|2[0-4]\d|25[0-5])){2}(?:\.(?:[1-9]\d?|1\d\d|2[0-4]\d|25[0-4]))|(?:(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)(?:\.(?:[a-z\u00a1-\uffff0-9]-*)*[a-z\u00a1-\uffff0-9]+)*(?:\.(?:[a-z\u00a1-\uffff]{2,})))(?::\d{2,5})?(?:[/?#]\S*)?$/i.test(
        value
        );
    }

    form.addEventListener('submit', (e) => {

        if(validateUrl(input.value)){
            loader.classList.remove('d-none');
            loader.classList.add('d-flex');
        }
    })
</script>